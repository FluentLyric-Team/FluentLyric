<Application
    x:Class="FluentLyric.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentLyric">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <ResourceDictionary x:Key="Light">
                <SolidColorBrush x:Key="WindowCaptionForeground">Black</SolidColorBrush>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Dark">
                <SolidColorBrush x:Key="WindowCaptionForeground">White</SolidColorBrush>
            </ResourceDictionary>

            <FontFamily x:Key="FilledIcon">ms-appx:///Fonts/FluentIcon.ttf</FontFamily>
            <FontFamily x:Key="ContentControlThemeFontFamily">ms-appx:///Fonts/Nobel-Scarlet.ttc</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
